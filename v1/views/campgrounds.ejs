<% include partials/header %>
<div class="container">
<header class="jumbotron">
    <div class="container">
            <h1>The campground page</h1>
            <p>
                    <a class="btn btn-primary btn btn-lg" href="campgrounds/new">Add a new Picture</a>
            
            </p>
    </div>


</header>

<div class="row text-center">
    <% campgrounds.forEach(campground => { %>
        <div class="col-md-3 col-sm-6">
            <div>
                <div class="thumbnail">
                    <img src="<%=campground.image %>" alt="">
                    <caption>
                        <h4><%=campground.name %></h4>
                    </caption>
                </div>
            </div>
        </div>
        
        



<% }); %>
</div>
</div>
<% include partials/footer %>